@model DambildorStore.Models.ViewModels.PayViewModel
@{
    ViewBag.Title = "Buyproducts";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>Sepetim</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <label>Kart Sahibi İsim Soyad</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "İsim Soyad" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label>Kart Numarası</label>
                                @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "---- ---- ---- ----" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label>Son Kullanma Ay</label>
                                <select name="ExpM" class="form-select">
                                    <option value="01">01</option>
                                    <option value="02">02</option>
                                    <option value="03">03</option>
                                    <option value="04">04</option>
                                    <option value="05">05</option>
                                    <option value="06">06</option>
                                    <option value="07">07</option>
                                    <option value="08">08</option>
                                    <option value="09">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label>Son Kullanma Yıl</label>
                                <select name="ExpY" class="form-select">
                                    <option value="2022">2022</option>
                                    <option value="2023">2023</option>
                                    <option value="2024">2024</option>
                                    <option value="2025">2025</option>
                                    <option value="2026">2026</option>
                                    <option value="2027">2027</option>
                                    <option value="2028">2028</option>
                                    <option value="2029">2029</option>
                                    <option value="2030">2030</option>
                                    <option value="2031">2031</option>
                                    <option value="2032">2032</option>
                                    <option value="2033">2033</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label>CVV Numarası</label>
                                @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "*9*" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <input type="checkbox" /> Kullanıcı Aydınlatma Metninin Okudum Kabul Ediyorum
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-md-12">
                                <input type="checkbox" /> Mesafeli Satış Sözleşmesini Okudum Kabul Ediyorum
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-md-12">
                                <input type="checkbox" /> Bana Reklam Gönder
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-success float-end">Ödemeyi Tamamla</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h4>Sepet Toplamı</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <td>Ara Toplam</td>
                            <td style="font-weight:900">

                                <label class="float-end"> @ViewBag.semitotal ₺</label>
                            </td>
                        </tr>
                        <tr>
                            <td>Vergi</td>
                            <td style="font-weight:900">

                                <label class="float-end"> @ViewBag.totaltax ₺</label>
                            </td>
                        </tr>
                        <tr>
                            <td>Toplam</td>
                            <td style="font-weight:900">

                                <label class="float-end"> @ViewBag.total ₺</label>

                            </td>
                        </tr>

                    </table>
                </div>

            </div>
        </div>
    </div>

</div>

